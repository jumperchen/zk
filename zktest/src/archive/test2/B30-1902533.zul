<zk xmlns:n="http://www.zkoss.org/2005/zk/native">
	<n:p>BorderLayout should not be splittable when click on split btn.</n:p>
	<borderlayout height="500px">
	<north maxsize="300" size="50%" border="0" splittable="true" collapsible="true">
		<borderlayout>
			<west size="25%" border="none" maxsize="250" splittable="true" collapsible="true">
				<div vflex="1" style="background:#B8D335">
					<label value="25%"
						style="color:white;font-size:50px" />
				</div>
			</west>
			<center border="none">
				<div vflex="1" style="background:#E6D92C">
					<label value="25%"
						style="color:white;font-size:50px" />
				</div>
			</center>
			<east size="50%" border="none">
				<label vflex="1" value="Here is a non-border"
					style="color:gray;font-size:30px" />
			</east>
		</borderlayout>
	</north>
	<center border="0">
		<borderlayout>
			<west maxsize="600" minsize="300" size="30%" border="0" splittable="true">
				<div vflex="1" style="background:#E6D92C">
					<label value="30%"
						style="color:white;font-size:50px" />
				</div>
			</west>
			<center>
				<label value="Here is a border"
					style="color:gray;font-size:30px" />
			</center>
			<east size="30%" border="0" collapsible="true">
				<div vflex="1" style="background:#B8D335">
					<label value="30%"
						style="color:white;font-size:50px" />
				</div>
			</east>
		</borderlayout>
	</center>
</borderlayout>
</zk>
